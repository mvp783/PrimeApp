<div class="col-md-6 col-md-offset-3">
  <h1 class="m-b-2">Log in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="check_box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "checkbox inline" %>
    </div>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-primary m-t-2" %>
</div>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <%= render "users/shared/links" %>
</div>